<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuinielaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Nombreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:text="Nombre" />

            <TextView
                android:id="@+id/Codigoq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textIsSelectable="true"
                android:text="Código de invitación: 5iyyX" />

            <TextView
                android:id="@+id/Montoq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="20000 colones" />

            <TextView
                android:id="@+id/Participantesq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="12 máximo de participantes" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="#50000000"
                android:gravity="center"
                android:onClick="tablaPosiciones"
                android:padding="10dp"
                android:text="Tabla de posiciones"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#50000000"
                android:textColor="@android:color/white"
                android:text="Mis predicciones" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>