                android:layout_height="wrap_content"
                android:text="Nombre: alemolinalp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrÃ³nico: alemolina@gmail.com" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
