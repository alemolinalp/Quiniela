                android:prompt="@string/country_spinner"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
